<!DOCTYPE html>
<html>
  <head>
    <title>SouperGrate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= if current_user  %>
      Signed in as <%= current_user.name %> | <%= link_to 'Logout', '/destroy' %>
    <% else %>
      <%= link_to 'Login', '/sessions/new' %> | <%= link_to 'Signup', '/users/new' %>
    <% end %>
    <%= yield %>
  </body>
</html>
