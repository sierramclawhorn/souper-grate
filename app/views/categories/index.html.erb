<div class= 'container'>

<h1 class= 'courses-header'> Courses </h1>
  
<div class= 'courses contain'>
  <!-- add link for creating new recipe if logged in -->
  
<div class= 'potato'>
  <div class= 'category potato-list'>
  <% @categories.each do |category| %>
      <h2 class= 'category-header'><%= link_to "#{ category.name }", category_path(category) %></h2>
        <% if category.recipes.count > 0 %>
          <% if category.recipes.count >= 5 %>
            <ul>
                <%= render partial: 'recipe', collection:   category.recipes[-5..-1], locals: {     category:category } %>
            </ul>
          <% else %>
            <ul>
              <%= render partial: 'recipe', collection: category.recipes, locals: { category: category } %>
          </ul>
          <% end %>
        <% end %>
  <% end %>
  </div>
</div>
</div>

</div>

